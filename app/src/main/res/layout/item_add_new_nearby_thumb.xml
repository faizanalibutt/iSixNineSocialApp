<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/topl"
            app:layout_constraintLeft_toLeftOf="@+id/main_lay"
            app:layout_constraintRight_toRightOf="@+id/main_lay"

            android:layout_width="100dp"
            android:layout_height="120dp"

            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:src="@drawable/storydefault"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>






        </RelativeLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/addstorytext"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            tools:text="Add STORY"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:textStyle="bold"
            android:shadowColor="@color/warm_grey"
            android:shadowRadius="8"
            app:layout_constraintTop_toBottomOf="@+id/topl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>